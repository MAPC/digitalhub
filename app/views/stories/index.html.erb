<%= render "banner" %>

<section class="content StoriesPage">
  <div class="container">
    <div class="content-column">
      <h2>Hear Your Neighbors' Stories</h2>

      <% if @stories.any? %>
        <% @stories.each do |story| %>
          <div class="story">
            <div class="story-meta">
              <span class="story-date"><%= story.created_at.to_formatted_s(:simplified) %></span>
            </div>

            <%= render partial: 'media', locals: { media: story } %>
          </div>
        <% end %>
      <% else %>
        <div class="no-content-message">
          There are currently no stories submitted.
        </div>
      <% end %>
    </div>

    <div class="content-column">
      <h2>Have Your Own Story to Share?</h2>

      <%= link_to 'Speak Out!', new_story_path, class: 'button' %>
    </div>
  </div>
</section>
