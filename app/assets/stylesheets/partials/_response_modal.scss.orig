  }

  &-question {
    color: $v3-color_green-lightest;
    font-size: $font_size-xlarge;
    font-style: italic;
    grid-column-start: 2;
    grid-row-end: 2;
    grid-row-start: 1;
  }

  &-text {
    color: $v3-color_green-lightest;
    font-size: $font_size-large;
    font-style: italic;
    grid-column-start: 2;
    grid-row-end: 3;
    grid-row-start: 2;
  }

  &-submitter {
    align-items: right;
    color: $v3-color_green-lightest;
    font-size: $font_size-large;
    font-style: italic;
    grid-column-start: 2;
    grid-row-end: 5;
    grid-row-start: 4;
  }

  &-close {
    background: none;
    border: 0;
    color: $v3-color_green-lightest;
    cursor: pointer;
    font-size: 5rem;
    grid-column-start: 3;
    grid-row-end: 2;
    grid-row-start: 1;
    left: 80%;
    margin: 0;
    padding: 0;
    top: 7rem;
    z-index: 7;

    @include media(small) {
      font-size: 3rem;
      grid-column-start: 4;
      left: 70%;
      position: fixed;
      top: 1.5rem;
    }
  }
}
