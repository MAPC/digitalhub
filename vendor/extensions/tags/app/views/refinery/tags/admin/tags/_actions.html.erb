<ul>
  <% if ::Refinery::Tags::Admin::TagsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.tags_admin_tags_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_tags_admin_tag_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Tags::Admin::TagsController.sortable? && ::Refinery::Tags::Tag.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.tags_admin_tags_path,
                     t('.reorder', what:  "Tags"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.tags_admin_tags_path,
                      t('.reorder_done', what: "Tags"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
