<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(hero_image) -%>">
  <span class='title'>
    <%= hero_image.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    
    <%= action_icon(:edit,    refinery.edit_hero_images_admin_hero_image_path(hero_image), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.hero_images_admin_hero_image_path(hero_image), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: hero_image.title)}}  ) %>
  </span>
</li>
