<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(tagging) -%>">
  <span class='title'>
    <%= tagging.title %>
    <% if tagging.event %>
      <%= tagging.event.title %>
      <% tagging.event.tags.each do |t| %>
        <%= t.title %>
      <% end %>
    <% end %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.taggings_tagging_path(tagging), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_taggings_admin_tagging_path(tagging), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.taggings_admin_tagging_path(tagging), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: tagging.title)}}  ) %>
  </span>
</li>
