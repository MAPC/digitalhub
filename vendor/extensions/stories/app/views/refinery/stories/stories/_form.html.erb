<div class="story-form-wrapper">
  <%= form_for [refinery, :stories, story] do |form| -%>
    <% if story.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

        <ul>
        <% story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field question">
      <h2>Pick a Question Below</h2>
      <p><%= form.radio_button(:question, 'question1') %><%= form.label :question, question_text('question1'), value: 'question1' %></p>
      <p><%= form.radio_button(:question, 'question2') %><%= form.label :question, question_text('question2'), value: 'question2' %></p>
    </div>

    <div class="field name">
      <h4><%= form.label :name, 'Name (required)' %></h4>
      <%= form.text_field :name %>
    </div>


    <div class="field text-response">
      <h4><%= form.label :response, 'Response' %></h4>
      <%= form.text_area :response, placeholder: 'Example: In the year 2050 [â€¦]' %>
    </div>

    <div>
      <%= form.submit('Submit', class: 'button') %>
    </div>

    <div class="media-buttons">
      <div class="field video-response">
        <%= form.file_field :video, accept: "video/mp4,video/x-m4v,video/*", capture: "", class: "actions" %>
        <%= form.label :video, 'Upload or Take Video' %>
      </div>

      <div class="field audio-response" id="audio-recording">
        <div class="field or">
          or
        </div>
        <div class="audio-buttons">
          <button type="button" id="recordButton" class="button">Record a Voice Memo</button>
          <button type="button" id="stopButton" class="button">Stop Recording</button>
        </div>
        <%= form.file_field :audio, accept: "audio/*", 'data-direct-upload-url': main_app.rails_direct_uploads_url, class: "actions" %>
      </div>
    </div>


  <% end %>
</div>
