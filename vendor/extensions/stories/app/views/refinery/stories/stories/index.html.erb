<div class="StoriesPage">
  <div class="banner">
    <div class="container">
      <div class="content-column banner-content">
        <h1>The Commons</h1>
      </div>
    </div>
  </div>

  <% content_for :body do %>
    <% if @stories.any? %>
      <% @stories.each do |story| %>
        <div class="story">
          <div class="story-meta">
            <span class="story-date"><%= story.created_at.to_formatted_s(:simplified) %></span>
          </div>
          <%= render partial: 'media', locals: { media: story } %>
        </div>
      <% end %>
    <% else %>
      <div class="no-content-message">
        There are currently no stories submitted.
      </div>
    <% end %>
    <h2>Have Your Own Story to Share?</h2>
    <%= link_to 'Speak Out!', refinery.new_stories_story_path, class: 'button' %>
  <% end %>

  <%= render '/refinery/content_page' %>
</div>
