<div class="v2-banner">
  <div class="container">
    <div class="content-column banner-content">
      <h1><%= @page.try(:title) %></h1>
    </div>
  </div>
</div>
<% content_for :body_content_title do %>
  <%= @story.submitter_name %>
<% end %>

<% content_for :body do %>
  <section class="StoriesPage">
    <h2>Your Response</h2>
    <h4><%= question_text(@story.question) %></h4>

    <%= render partial: 'media', locals: { media: @story } %>

    <div class="button-wrapper">
      <div class="left-buttons">
        <%= link_to 'Return to Weigh In', refinery.stories_stories_path, class: 'button' %>
      </div>
    </div>
  </section>
<% end %>

<%= render '/refinery/content_page' %>
