<div class="Report">
  <div class="report">
    <div class="v2-banner"></div><!-- top green bar -->
      <div class="content container">
        <div class="content__date"><%= @report.date.strftime("%b %e, %Y") %></div>
        <div class="content__title">
          <%= @report.title %>
        </div>
        <div class="content__body">
          <%= image_fu @report.image, nil, class: "content__image" %>
           <%= raw @report.body %>
        </div>
      </div>
    </div>
  </div>
</div>
