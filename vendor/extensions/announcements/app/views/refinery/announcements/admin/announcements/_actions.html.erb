<ul>
  <% if ::Refinery::Announcements::Admin::AnnouncementsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.announcements_admin_announcements_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_announcements_admin_announcement_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Announcements::Admin::AnnouncementsController.sortable? && ::Refinery::Announcements::Announcement.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.announcements_admin_announcements_path,
                     t('.reorder', what:  "Announcements"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.announcements_admin_announcements_path,
                      t('.reorder_done', what: "Announcements"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
