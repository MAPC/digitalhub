<style>
  .tags {
    /* background-color: rgb(192, 220, 245); */
    border: 1px solid rgb(54, 54, 136);
    width: 40%;
  }

  .tags__header {
    color: red;
  }

  .tags__selectors {
    /* border: 1px solid rgb(19, 202, 226); */
  }

  .tags__selector {
    border: 1px solid rgb(19, 202, 226);
    width: 7rem;
    border-radius: 25px;
    text-align: center;
    margin-bottom: 2px;
  }

  .tags__selector-content-type {
    background-color: lightgray;
  }

  .tags__selector-topic-area {
    background-color: gray;
  }

  .tags__selector-unselected {
    background-color: lightgray;
  }
      
  .tags__selector-selected {
      background-color: lightgreen;
    }
  
  .tags__selector:hover {
    background-color: pink;
  }
</style>

<%= form_for [refinery, :announcements_admin, @announcement] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @announcement,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Mobility.locale %>
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:body],
                :object => "announcements/announcement" -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @announcement.image,
               :toggle_image_display => false -%>
  </div>

  <div class='tags__header'>EDIT TAGS:</div>
  <div class="tags">
    <div class='tags__selectors'>
      <% content_type_tags = Refinery::Tags::Tag.all.select {|t| t.tag_type == "content_type" } %>
      <%= f.collection_radio_buttons(:tag_ids, content_type_tags, :id, :title, {allow_blank: true} ) %>
    </div>

    <div class='tags__selectors'>
      <% topic_area_tags = Refinery::Tags::Tag.all.select {|t| t.tag_type == "topic_area" } %>
      <%= f.collection_check_boxes(:tag_ids, topic_area_tags, :id, :title, { allow_blank: true} ) %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.announcements.admin.announcements.announcement'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @announcement.title),
             cancel_url: refinery.announcements_admin_announcements_path -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
