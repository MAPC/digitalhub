<% content_for :body_content_title do %>
  <%= @event.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @event.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
  <section>
    <h1>Start</h1>
    <p>
      <%=raw @event.start %>
    </p>
  </section>
  <section>
    <h1>End</h1>
    <p>
      <%=raw @event.end %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @event.image, nil %>
    </p>
  </section>
  <section>
    <h1>Event Type</h1>
    <p>
      <%=raw @event.event_type %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @event.address %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%=raw @event.city %>
    </p>
  </section>
  <section>
    <h1>State</h1>
    <p>
      <%=raw @event.state %>
    </p>
  </section>
  <section>
    <h1>Zipcode</h1>
    <p>
      <%=raw @event.zipcode %>
    </p>
  </section>
  <section>
    <h1>Registration Link</h1>
    <p>
      <%=raw @event.registration_link %>
    </p>
  </section>
  <section>
    <h1>Accessibility Note</h1>
    <p>
      <%=raw @event.accessibility_note %>
    </p>
  </section>
  <section>
    <h1>Translation Note</h1>
    <p>
      <%=raw @event.translation_note %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
